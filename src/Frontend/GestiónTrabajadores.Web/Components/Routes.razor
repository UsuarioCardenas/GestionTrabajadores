<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>No encontrado</PageTitle>
        <LayoutView Layout="@typeof(Layout.MainLayout)">
            <MudContainer Class="mt-8">
                <MudPaper Class="pa-8 text-center">
                    <MudIcon Icon="@Icons.Material.Filled.SearchOff" Color="Color.Error" Size="Size.Large" Style="font-size: 4rem;" />
                    <MudText Typo="Typo.h4" Class="mt-4">Página no encontrada</MudText>
                    <MudText Typo="Typo.body1" Class="mt-2">
                        Lo sentimos, la página que buscas no existe.
                    </MudText>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/" Class="mt-4">
                        Volver al inicio
                    </MudButton>
                </MudPaper>
            </MudContainer>
        </LayoutView>
    </NotFound>
</Router>